version: '2'

# Kafka service
# ====================
#
# - CNTR: container

services:
  zookeeper:
    build:
      context: ./img-build/zookeeper
    environment:
      SERVER_ID: {{ zookeeper_id }}
      SERVER_COUNT: {{ groups['brokers'] | length }}
    volumes:
      - /data/zk-data:/zookeeper/data
    ports:
      - 2181:2181
      - 2888:2888
      - 3888:3888
    extra_host:
      {% for host in groups['brokers'] %}
      - "zookeeper-{{ hostvars[host]['zookeeper_id'] }}:{{ hostvars[host]['ansible_default_ipv4']['address'] }}"
      {% endfor %}


  kafka-server:
    build:
      context: ./img-build/kafka
    volumes:
      - /data/kafka-data:/kafka/data
      - /data/kafka-logs:/kafka/logs
      - ./kafka-config:/kafka/config
    ports:
      - 9092:9092
      - 9094:9094
    links:
      - zookeeper
    environment:
      BROKER_ID: {{ kafka_id }}
      ZOOKEEPER_CONNECT: '{{ kafka_zk_servers }}'
      KAFKA_INTER_BROKER_LISTENER_NAME: 'CLOUD'
      KAFKA_DELETE_TOPIC_ENABLE: 'TRUE'
      ADVERTISED_LISTENERS: >-
        CNTR://kafka-server:29092,
        CLOUD://{{ ansible_default_ipv4.address }}:9092
      LISTENERS: >-
        CNTR://:29092,
        CLOUD://:9092
      KAFKA_LISTENER_SECURITY_PROTOCOL_MAP: >-
        CNTR:PLAINTEXT,
        CLOUD:PLAINTEXT
