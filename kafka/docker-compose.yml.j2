version: '2'

# Kafka service
# ====================
#
# - CNTR: container

services:
  zookeeper:
    build:
      context: ./img-build/zookeeper
    environment:
      ZOO_MY_ID: {{ zookeeper_id }}
      ZOO_SERVERS: >-
    {% for host in groups['brokers'] %}
      server.{{ hostvars[host]['zookeeper_id'] }}=
    {%- if zookeeper_id == hostvars[host]['zookeeper_id'] %}0.0.0.0
    {%- else -%}
    {{ hostvars[host]['ansible_default_ipv4']['address'] -}}
    {% endif %}:2888:3888;2181
    {% endfor %}

    volumes:
      - /data/zk-data:/data
    ports:
      - 2181:2181
      - 2888:2888
      - 3888:3888
    extra_hosts:
  {% for host in groups['brokers'] %}
    - "zookeeper-{{ hostvars[host]['zookeeper_id'] }}:{{ hostvars[host]['ansible_default_ipv4']['address'] }}"
  {% endfor %}


  kafka-server:
    build:
      context: ./img-build/kafka
    volumes:
      - /data/kafka-data:/kafka/data
      - /data/kafka-logs:/kafka/logs
      - ./kafka-config:/kafka/config
    ports:
      - 9092:9092
      - 9094:9094
    links:
      - zookeeper
    environment:
      BROKER_ID: {{ kafka_id }}
      ZOOKEEPER_CONNECT: 'zookeeper:2181,{{ kafka_zk_servers }}'
      KAFKA_INTER_BROKER_LISTENER_NAME: 'CLOUD'
      KAFKA_DELETE_TOPIC_ENABLE: 'TRUE'
      ADVERTISED_LISTENERS: >-
        CNTR://kafka-server:29092,
        CLOUD://{{ ansible_default_ipv4.address }}:9092
      LISTENERS: >-
        CNTR://:29092,
        CLOUD://:9092
      KAFKA_LISTENER_SECURITY_PROTOCOL_MAP: >-
        CNTR:PLAINTEXT,
        CLOUD:PLAINTEXT
